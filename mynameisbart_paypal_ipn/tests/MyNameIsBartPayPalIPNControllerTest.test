<?php

/**
 * @file
 * Contains class MyNameIsBartPayPalIPNControllerTest.
 */

/**
 * Tests MyNameIsBartPayPalIPNController functionality.
 */
class MyNameIsBartPayPalIPNControllerTest extends MyNameIsBartPayPalIPNWebTestCase {

  /**
   * Implements DrupalTestCase::getInfo().
   */
  static function getInfo() {
    return array(
      'name' => 'MyNameIsBartPayPalIPNController',
      'group' => 'PayPal IPN',
    );
  }

  /**
   * Overrides parent::setUp().
   */
  function setUp(array $modules = array()) {
    $this->profile = 'testing';
    parent::setUp($modules + array('mynameisbart_paypal_ipn_test'));
  }

  /**
   * Test save().
   */
  function testSave() {
    $ipn_variables = $this->mockIPNVariables(9);

    // Test inserting an IPN.
    $ipn = new MyNameIsBartPayPalIPN($ipn_variables);
    MyNameIsBartPayPalIPNController::save($ipn);
    $this->assertTrue($this->IPNExists($ipn), 'All IPN properties were inserted correctly.');

    // Test updating an IPN.
    $ipn = new MyNameIsBartPayPalIPN($ipn_variables);
    $ipn->pid = 7;
    MyNameIsBartPayPalIPNController::save($ipn);
    $this->assertTrue($this->IPNExists($ipn), 'All IPN properties were updated correctly.');
  }

  /**
   * Test load().
   *
   * @depends testSave
   */
  function testLoad() {
    $ipn = new MyNameIsBartPayPalIPN();
    MyNameIsBartPayPalIPNController::save($ipn);
    $ipn_loaded = MyNameIsBartPayPalIPNController::load($ipn->txn_id);
    $this->assertTrue($ipn_loaded instanceof MyNameIsBartPayPalIPN, 'An IPN is loaded correctly.');
    $non_existing_ipn_loaded = MyNameIsBartPayPalIPNController::load(999);
    $this->assertFalse($non_existing_ipn_loaded, 'A non-existing IPN is not loaded.');
  }

  /**
   * Test delete().
   *
   * @depends testSave
   */
  function testDelete() {
    $ipn = new MyNameIsBartPayPalIPN();
    MyNameIsBartPayPalIPNController::save($ipn);
    MyNameIsBartPayPalIPNController::delete($ipn->txn_id);
    $count = db_select('mynameisbart_paypal_ipn', 'mpi')
      ->condition('txn_id', $ipn->txn_id)
      ->countQuery()
      ->execute()
      ->fetchField();
    $this->assertFalse($count, 'An IPN is deleted.');
  }

  /**
   * Test URL().
   */
  function testURL() {
    $pid = 9;
    $this->assertTrue(valid_url(MyNameIsBartPayPalIPNController::URL(), TRUE));
  }

  /**
   * Test acknowledge().
   */
  function testAcknowledge() {
    $this->assertTrue(MyNameIsBartPayPalIPNController::acknowledge($this->mockIPNVariables(9, TRUE)));
    $this->assertFalse(MyNameIsBartPayPalIPNController::acknowledge($this->mockIPNVariables(9, FALSE)));
  }

  /**
   * Test validate().
   *
   * @depends testSave
   */
  function testValidate() {
    $payment_method = $this->paymentMethodCreate(2, payment_method_controller_load('MyNameIsBartPayPalIPNTestPaymentMethodController'));
    entity_save('payment_method', $payment_method);
    $payment = $this->paymentCreate(2, $payment_method);
    entity_save('payment', $payment);

    // Test valid IPN variables.
    $ipn_variables = $this->mockIPNVariables($payment->pid);
    $this->assertTrue(MyNameIsBartPayPalIPNController::validate($ipn_variables));

    // Test an already processed IPN.
    $ipn = new MyNameIsBartPayPalIPN($ipn_variables);
    $ipn->pid = MyNameIsBartPayPalIPNController::PID($ipn_variables['invoice']);
    MyNameIsBartPayPalIPNController::save($ipn);
    $this->assertFalse(MyNameIsBartPayPalIPNController::validate($ipn_variables));

    // Test IPN variables for which no Payment exists.
    $ipn_variables = $this->mockIPNVariables(999);
    $this->assertFalse(MyNameIsBartPayPalIPNController::validate($ipn_variables));
  }

  /**
   * Test process().
   */
  function testProcess() {
    $payment_method = $this->paymentMethodCreate(2, payment_method_controller_load('MyNameIsBartPayPalIPNTestPaymentMethodController'));
    entity_save('payment_method', $payment_method);
    $payment = $this->paymentCreate(2, $payment_method);
    entity_save('payment', $payment);
    $original_payment_status = $payment->getStatus()->status;
    $ipn_variables = $this->mockIPNVariables($payment->pid);
    MyNameIsBartPayPalIPNController::process($ipn_variables);
    $payment = entity_load_single('payment', $payment->pid);
    $this->assertNotEqual($original_payment_status, $payment->getStatus()->status);
  }

  /**
   * Test hashPID().
   */
  function testHashPID() {
    $this->assertTrue(is_string(MyNameIsBartPayPalIPNController::hashPID(3)));
  }

  /**
   * Test invoiceID().
   */
  function testInvoiceID() {
    $this->assertTrue(is_string(MyNameIsBartPayPalIPNController::invoiceID(3)));
  }

  /**
   * Test PID().
   *
   * @depends testInvoiceID
   */
  function testPID() {
    $pid = 3;
    $valid_invoice_id = MyNameIsBartPayPalIPNController::invoiceID(3);
    $this->assertIdentical(MyNameIsBartPayPalIPNController::PID($valid_invoice_id), $pid);
    $invalid_invoice_id = 'foo';
    $this->assertFalse(MyNameIsBartPayPalIPNController::PID($invalid_invoice_id));
  }

  /**
   * Test statusMap().
   */
  function testStatusMap() {
    foreach (MyNameIsBartPayPalIPNController::statusMap() as $paypal_status => $payment_status) {
      $this->assertTrue(is_string($paypal_status));
      $this->assertTrue(is_string($payment_status));
    }
  }

  /**
   * Test pendingStatusMap().
   */
  function testPendingStatusMap() {
    foreach (MyNameIsBartPayPalIPNController::pendingStatusMap() as $paypal_status => $payment_status) {
      $this->assertTrue(is_string($paypal_status));
      $this->assertTrue(is_string($payment_status));
    }
  }

  /**
   * Test convertStatus().
   */
  function testConvertStatus() {
    $ipn_variables = $this->mockIPNVariables(9);
    $this->assertEqual(MyNameIsBartPayPalIPNController::convertStatus($ipn_variables), PAYMENT_STATUS_SUCCESS);
    $ipn_variables['payment_status'] = 'Pending';
    $ipn_variables['pending_reason'] = 'multi-currency';
    $this->assertEqual(MyNameIsBartPayPalIPNController::convertStatus($ipn_variables), MYNAMEISBART_PAYPAL_PAYMENT_STATUS_MULTI_CURRENCY);
  }
}
