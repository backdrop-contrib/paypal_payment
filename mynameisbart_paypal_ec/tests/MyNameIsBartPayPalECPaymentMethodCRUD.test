<?php

/**
 * @file
 * Contains class MyNameIsBartPayPalECPaymentMethodCRUD.
 */

/**
 * Tests MyNameIsBartPayPalECPaymentMethodController CRUD.
 */
class MyNameIsBartPayPalECPaymentMethodCRUD extends MyNameIsBartPayPalECWebTestCase {

  /**
   * Implements DrupalTestCase::getInfo().
   */
  static function getInfo() {
    return array(
      'name' => 'Payment method CRUD',
      'group' => 'PayPal Express Checkout',
    );
  }

  /**
   * Overrides parent::setUp().
   */
  function setUp(array $modules = array()) {
    $this->profile = 'testing';
    parent::setUp($modules + array('mynameisbart_paypal_ec'));
  }

  /**
   * Tests CRUD.
   */
  function testCRUD() {
    $controller = payment_method_controller_load('MyNameIsBartPayPalECPaymentMethodController');
    $payment_method = new PaymentMethod(array(
      'controller' => $controller,
      'controller_data' => array(
        'server' => $controller::SERVER_SANDBOX,
        'capture' => $controller::CAPTURE_MANUAL,
      ),
    ));
    entity_save('payment_method', $payment_method);
    $this->assertTrue($this->paymentMethodControllerDataExists($payment_method));

    // Test loading a payment method.
    $payment_method_loaded = entity_load_single('payment_method', $payment_method->pmid);
    $this->assertEqual($payment_method->controller_data, $payment_method_loaded->controller_data);

    // Test updating a payment method.
    $payment_method->controller_data = $controller->controller_data_defaults;
    entity_save('payment_method', $payment_method);
    $this->assertTrue($this->paymentMethodControllerDataExists($payment_method));

    // Test deleting a payment method.
    entity_delete('payment_method', $payment_method->pmid);
    $count = db_select('mynameisbart_paypal_ec_payment_method', 'mpi')
      ->condition('pmid', $payment_method->pmid)
      ->countQuery()
      ->execute()
      ->fetchField();
    $this->assertFalse($count);
  }
}
